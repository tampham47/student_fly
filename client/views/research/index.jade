.row
	.col-md-9
		//- h4
		//- 	label.label.label-danger Công trình nghiên cứu khoa học
		.page-header(style='margin-top:0px')
			h2 Công trình nghiên cứu
				button.btn.btn-default.pull-right(ng-click='search_panel()')
					i.glyphicon.glyphicon-search

				a.btn.btn-success.pull-right(href='#/research/new')
					i.glyphicon.glyphicon-plus
					|Tạo mới

		form.form-horizontal#search-panel(style='display:none')
			// Text input
			.form-group
				label.col-md-3.control-label(for='category') Thể loại
				.col-md-9
					input#category.form-control.input-md(name='category', type='text', placeholder='')
			// Text input
			.form-group
				label.col-md-3.control-label(for='keywords') Từ khóa
				.col-md-9
					input#keywords.form-control.input-md(name='keywords', type='text', placeholder='')
			// Button (Double)
			.form-group
				label.col-md-3.control-label(for='search')
				.col-md-9
					button#search.btn.btn-primary.pull-right(name='search') Tìm kiếm
					button#cancel.btn.btn-default.pull-right(name='cancel', ng-click='search_panel()') Hủy

		.media(ng-repeat='post in model.data')
			a.pull-left(href='#/research/detail/{{post._id}}')
				img.img-rounded.media-object(width='100', height='100',
					src='../bower_components/_images/research_default.png', alt='...')
			.media-body
				h4.media-heading
					a(href='#/research/detail/{{post._id}}')
						| {{post.title}}
					br
					small Phạm Minh Tâm - 18/02/1024
				p
					| {{post.content | truncate:150}}

		center(style='margin-top:20px')
			div.btn-group.btn-group-justified(style='width:220px')
				div.btn-group
					button.btn.btn-default(type='button', ng-click='prev_page()', ng-if='current_page > 0')
						i.glyphicon.glyphicon-chevron-left
						| trang trước
					button.btn.btn-default(type='button', ng-if='current_page <= 0', disabled='disabled')
						i.glyphicon.glyphicon-chevron-left
						| trang trước

				div.btn-group
					button.btn.btn-default(type='button', ng-click='next_page()', ng-if='is_next_page() == true')
						| trang sau
						i.glyphicon.glyphicon-chevron-right
					button.btn.btn-default(type='button', ng-if='is_next_page() == false', disabled='disabled')
						| trang sau
						i.glyphicon.glyphicon-chevron-right
	.col-md-3
		//- h4
		//- 	label.label.label-success Nổi bật
